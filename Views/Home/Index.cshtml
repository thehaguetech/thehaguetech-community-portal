@{
    ViewData["Title"] = "";
}
<head>
    <link rel="stylesheet" href="~/css/Index.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <meta name="viewport" content="width=device-width, initial-scale=1">    


</head>
<body> 
<h1>@ViewData["Title"]</h1>
<div class="container">
    <div class="row-fluid h-100">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-80" src="http://moveopen.nl/wp-content/uploads/2018/12/0-2-1024x422.jpeg" alt="First slide" width="1000" height="300">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Welcome to THT</h5>
                        <p>Connect. Create. Collaborate</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block" src="https://miro.medium.com/max/8064/1*XPxaCo87QbyB5_mhGBVwCQ.jpeg" alt="Second slide" width="600" height="300">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Welcome to THT</h5>
                        <p>Connect. Create. Collaborate</p>
                    </div>                
                </div>
                <div class="carousel-item">
                    <img class="d-block" src="https://coworker.imgix.net/photos/netherlands/the-hague/the-hague-tech/main.jpg?w=488&h=257&fit=crop&mark=/template/img/wm_icon.png&markscale=5&markalign=center,middle/800x200?auto=yes&bg=555&fg=333&text=Third slide" alt="Third slide" width="600" height="300" text-align: center;>
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Welcome to THT</h5>
                        <p>Connect. Create. Collaborate</p>
                    </div>                  
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <!-- end of row-fluid -->

    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
            <div class="long-div" style="background-color:#C4C4C4">
                <p>Upcoming Events</p>
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="https://www.thehaguesecuritydelta.com/images/Partnership_HSD_THT_YesDelft_The_Hague.jpeg" alt="First Event Image" width="250" height="200">
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
            <div class="short-div">Mid_2</div>
            <div class="short-div" style="background-color:#C4C4C4">Mid_3</div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
            <div class="row" style="background-color:#C4C4C4">
                Right_1
            </div>
            <div class="row">
                Right_2
            </div>
        </div>
    </div>
</div>
</body>

